# ===========================================
# Backend (Node/Express) - No commitear .env
# Copia este archivo a .env en esta carpeta (server/.env)
# ===========================================

# true = datos en JSON (server/data); false = usar Supabase (requiere claves válidas)
USE_MOCK_DATA=true

# Supabase (service_role permite al backend leer/escribir sin RLS)
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu-anon-key-de-supabase
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key-secreta

# Gmail (envío de correos: OTP, notificaciones)
# Usa "Contraseña de aplicación" de Google, no la contraseña normal
GMAIL_USER=tu-email@gmail.com
GMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx
